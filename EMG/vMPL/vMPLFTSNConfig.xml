<?xml version="1.0" encoding="utf-8"?>
<vMPLFTSNConfig>


<!-- FTSN FORCE CALCULATION -->


<!-- Max Force output - will be the max value reported by VulcanX for force (float) -->
	<forcemaximumvalue>
		16.0
	</forcemaximumvalue>




<!-- FTSN COLOR CHANGE, BASED ON FORCE INTENSITY -->


<!-- Speed of Color/Saturation/Light Lerp (float) - transition speed of color / delay in seconds -->
	<colorchangespeed>
		0.1
	</colorchangespeed>

<!-- Starting Hue Color (float, default is 252 or dark blue) - values range from 0 to 360 with: -->
	<!-- Red:		0		-->
	<!-- Yellow:		58		-->
	<!-- Green:		126		-->
	<!-- Cyan:		180		-->
	<!-- Blue: 		230		-->
	<!-- Purple:		274		-->
	<!-- Magenta:		315		-->
	<!-- Red: 		360 (loops)	-->
	
	<huecolorstart>
		252
	</huecolorstart>

<!-- Ending Hue Color (integer, default is 342 or dark red) - values range from 0 to 360 -->
	<huecolorend>
		342
	</huecolorend>

<!-- Hue Color Movement Direction Forward (boolean, if true then from Starting Value to Ending Value, if false then from Ending Value to Starting Value) -->
	<huecolormovementforward>
		false
	</huecolormovementforward>

<!-- Starting Saturation (float, default is 0.2 or slight-light) - values range from 0.00 to 1.00 -->
	<saturationstart>
		0.2
	</saturationstart>

<!-- Ending Saturation (float, default is 1.0 or dark) - values range from 0.00 to 1.00 -->
	<saturationend>
		1.0
	</saturationend>

<!-- Saturation Movement Direction Forward (boolean, if true then from Starting Value to Ending Value, if false then from Ending Value to Starting Value) -->
	<saturationmovementforward>
		true
	</saturationmovementforward>

<!-- Light Intensity Value (float, default is 0.4 or minimal reflection) – values range from 0.00 to 1.00 - (single value, no function yet) -->
	<lightintensity>
		0.4
	</lightintensity>


</vMPLFTSNConfig>